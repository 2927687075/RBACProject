@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_LayoutForm.cshtml";
}

<div class="layui-col-md12 top10">
    <form class="layui-form" id="form" action="/User/AddUserSumbit" method="post">
        
        <div class="layui-form-item">
            <label class="layui-form-label">用户名称</label>
            <div class="layui-input-inline">
                <input name="UserName" value="" lay-verify="required" lay-vertype="tips" class="layui-input" type="text">
            </div>

            <label class="layui-form-label">真实姓名</label>
            <div class="layui-input-inline">
                <input name="RealName" value="" lay-verify="required" lay-vertype="tips" class="layui-input" type="text">
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">性别</label>
            <div class="layui-input-inline">
                @Html.GanderRadioHtml()
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">电话号码</label>
            <div class="layui-input-inline">
                <input name="Phone" value="" lay-vertype="tips" class="layui-input" type="text">
            </div>

            <label class="layui-form-label">邮箱</label>
            <div class="layui-input-inline">
                <input name="Email" value="" lay-vertype="tips" class="layui-input" type="text">
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">部门</label>
            <div class="layui-input-inline">
                @Html.DropDownList("department", new SelectList(ViewBag.department, "Value", "Text"), "-请选择部门-", new Dictionary<string, object> { { "lay-verify", "required" }, { "lay-search", "" }, { "id", "department" }, })
            </div>

            <label class="layui-form-label">备注</label>
            <div class="layui-input-inline">
                <input name="Remark" value="" lay-vertype="tips" class="layui-input" type="text">
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">头像(待优化)</label>
            <div class="layui-input-inline">
                <input name="HeadShot" value="" lay-vertype="tips" class="layui-input" type="text">
            </div>


        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">角色</label>
            <div class="layui-input-block">
                @Html.RoleCheckBox(ViewData["allRoleModels"], ViewData["userRoleModels"])
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">状态</label>
            <div class="layui-input-inline">
                @Html.StatusRadioHtml()
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-input-block">
                <button class="layui-btn" lay-submit="" lay-filter="submitForm" id="submitForm">立即提交</button>
                <button type="reset" class="layui-btn layui-btn-primary">重置</button>
            </div>
        </div>
    </form>
</div>
<script>
    layui.use(['form'], function () {
        var form = layui.form;
        submitForm(form, "添加成功"); //监听提交
        form.render('select');
    });
</script>

