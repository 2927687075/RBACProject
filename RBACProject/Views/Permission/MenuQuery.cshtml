@model RBACProject.Model.MenuModel
@{ 
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_LayoutDetail.cshtml";
}

<div class="layui-col-md12">
    <table class="layui-table" lay-skin="line">
        <tbody>
            <tr>
                <td>@Html.DisplayNameFor(x => x.MenuName)：</td>
                <td>@Model.MenuName</td>
                <td>@Html.DisplayNameFor(x => x.MenuUrl)：</td>
                <td>@Html.DisplayFor(x => x.MenuUrl)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(x => x.Status)：</td>
                <td>@Html.DisplayStatusHtml(@Model.Status)</td>
                <td>@Html.DisplayNameFor(x => x.MenuIcon)：</td>
                <td>
                    <span class="icon iconfont @Model.MenuIcon"></span>&nbsp;<span>@Model.MenuIcon</span>
                </td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(x => x.CreateOn)：</td>
                <td>@Model.CreateOn</td>
                <td>@Html.DisplayNameFor(x => x.UpdateOn)：</td>
                <td>@Html.DisplayFor(x => x.UpdateOn)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(x => x.CreateBy)：</td>
                <td>@Model.CreateBy</td>
                <td>@Html.DisplayNameFor(x => x.UpdateBy)：</td>
                <td>@Html.DisplayFor(x => x.UpdateBy)</td>
            </tr>
</table>
</div>
<script>
    layui.use(['form'], function () {
        var form = layui.form;
    });
</script>

